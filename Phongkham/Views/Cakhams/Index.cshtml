@model IEnumerable<Phongkham.Models.Cakham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}
<link rel="stylesheet" href="~/css/styles.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="custom-alert">
        <i class="fas fa-check-circle" style="color: green"></i>
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="container">
    <h1 class="mt-4">Danh sách ca khám</h1>

    <div class="row justify-content-end">
        <div class="col-auto">
            <a type="button" class="btn btn-primary" style="color: white" asp-action="Create">Thêm mới</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Giá</th>
                        <th scope="col">Ngày đăng</th>
                        <th scope="col">Khung giờ</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cakham in Model)
                    {
                        <tr>
                            <td>@cakham.Gia.ToString("N0")</td>
                            <td>@cakham.NgayDang.ToString("dd/MM/yyyy")</td>
                            <td>@cakham.KhungGio.TimeSlot</td>
                            <td>@cakham.TrangThai</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@cakham.Id">Sửa</a>
                                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@cakham.Id">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if ($("#successMessage").length > 0) {
            $("#successMessage").fadeIn().delay(10000).fadeOut();
        }
    });
</script>

<style>
    .table thead th {
        background-color: black;
        color: white;
    }

    .table tbody tr td {
        background-color: white;
        color: black;
    }

        .table tbody tr td a {
            color: black;
        }

    .btn-success, .btn-danger {
        color: white !important;
    }
</style>
