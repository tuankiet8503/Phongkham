<body>

    <!-- Preloader -->
    <div class="preloader">
        <div class="loader">
            <div class="loader-outter"></div>
            <div class="loader-inner"></div>

            <div class="indicator">
                <svg width="16px" height="12px">
                    <polyline id="back" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                    <polyline id="front" points="1 6 4 6 6 11 10 1 12 6 15 6"></polyline>
                </svg>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header Area -->
    <header class="header">
        <!-- Topbar -->
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7 col-12">
                        <!-- Top Contact -->
                        <!-- End Top Contact -->
                    </div>
                </div>
            </div>
        </div>
        <!-- End Topbar -->
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="inner">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-12">
                            <!-- Start Logo -->
                            <div class="logo">
                                <a asp-area="" asp-controller="HomeDT" asp-action="Index"><img src="~/Customer/img/logo.png" alt="#"></a>
                            </div>
                            <!-- End Logo -->
                            <!-- Mobile Nav -->
                            <div class="mobile-nav"></div>
                            <!-- End Mobile Nav -->
                        </div>
                        <div class="col-lg-7 col-md-9 col-12">
                            <!-- Main Menu -->
                            <div class="main-menu">
                                <nav class="navigation">
                                    <ul class="nav menu">
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "HomeDT" ? "active" : "")">
                                            <a href="@Url.Action("Index", "HomeDT")">Home <i></i></a>
                                        </li>
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Cakhams" ? "active" : "")">
                                            <a href="@Url.Action("Index", "Cakhams")">Ca khám <i></i></a>
                                        </li>
                                        <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "IndexLK" && ViewContext.RouteData.Values["controller"]?.ToString() == "HomeDT" ? "active" : "")">
                                            <a href="@Url.Action("IndexLK", "HomeDT")">Lịch khám <i></i></a>
                                        </li>
                                        <li>
                                            @await Html.PartialAsync("~/Views/Shared/_MenuPartial.cshtml", ViewData["LoaiTinTuc"])
                                        </li>
                                        <li><a href="#">Địa chỉ</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <!--/ End Main Menu -->
                        </div>
                        <div class="col-lg-2 col-12">
                            <div class="get-quote">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div style="display: flex; gap: 10px">
                                        <span style="margin-top: 10px;">@User.Identity.Name</span>
                                        <a class="btn btn-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Manage" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "" : "active")" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="fas fa-user"></i> <!-- Thay đổi biểu tượng ở đây -->
                                        </a>
                                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" style="display: inline;">
                                            <a href="#" class="btn btn-link" onclick="this.closest('form').submit(); return false;">
                                                <i class="fas fa-sign-out-alt"></i>
                                            </a>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <a href="~/Identity/Account/Login" class="btn" onclick="toggleMainMenuVisibility();">Đăng nhập</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Header Inner -->
    </header>

    <!-- End Header Area -->
    <div class="container1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--/ End Feautes -->
    <!-- Start Fun-facts -->
    <!-- Footer Area -->
    <footer id="footer" class="footer ">
        <!-- Footer Top -->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-12">
