@model Phongkham.Models.Loaitintuc

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<style>
    /* Định dạng kích thước và căn giữa form */
    .card {
        width: 400px; /* Đặt kích thước của form */
        margin: 50px auto; /* Căn giữa form theo chiều ngang và dọc */
        background-color: #79e8eb; /* Đổi màu nền thành màu xám nhạt */
        ; /* Màu nền của form */
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center">Cập nhật loại</h4>
                    <hr />

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Tên loại tin tức</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex justify-content-center" style="margin-top: 20px;">
                            <button type="submit" class="btn btn-primary mx-4">Lưu</button> <!-- Sử dụng lớp mx-4 để tạo khoảng cách ngang lớn hơn -->
                            <a asp-action="Index" class="btn btn-secondary">Quay về danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
