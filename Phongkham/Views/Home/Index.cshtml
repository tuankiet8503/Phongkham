<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var swiper = new Swiper('.swiper-container', {
            autoplay: {
                delay: 3000, // Thời gian chuyển đổi giữa các slide (ms)
            },
            loop: true, // Sử dụng vòng lặp
            pagination: {
                el: '.swiper-pagination', // Thêm điều hướng slider
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            spaceBetween: 30, // Tạo khoảng cách giữa các slide
            slidesPerView: 1, // Hiển thị một hình ảnh tại một thời điểm
            on: {
                slideChange: function () {
                    var slides = this.slides;
                    // Lặp qua tất cả các slide và ẩn đi (opacity 0.5) trừ slide hiện tại
                    for (var i = 0; i < slides.length; i++) {
                        slides[i].style.opacity = i === this.activeIndex ? 1 : 0;
                    }
                },
            },
        });
    });
</script>


